play( C, X, Y) :-
  turn(C),
  size(X,Y),
  atualizarEstado(C,X,Y).

atualizarEstado(C,X,Y) :-
  canimovethere(C,X,Y),
  mudarestado(X,Y),
  turnchange(C).

turnchange(C) :-
  ( C = white -> retract(turn(white)) ; asserta(turn(black))),
  ( C = black -> retract(turn(black)) ; asserta(turn(white))).


